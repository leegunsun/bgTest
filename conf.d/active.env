# Active Environment Configuration
# Enhanced Blue-Green deployment with backward compatibility

# PRIMARY: Active environment setting (REQUIRED - core functionality)
set $active "green";

# OPTIONAL: Advanced deployment configuration (safe defaults)
set $deployment_mode "single";
set $lb_method "round_robin";
set $upstream_status "healthy";

# OPTIONAL: Version tracking (for deployment synchronization)
set $blue_version "1.0.0";
set $green_version "2.0.0";
set $versions_synchronized "false";

# OPTIONAL: Load balancing and deployment state
set $load_balancing_enabled "false";
set $canary_percentage "10";
set $deployment_phase "stable";
set $deployment_target "none";
set $last_deployment_time "2024-01-01T00:00:00Z";
